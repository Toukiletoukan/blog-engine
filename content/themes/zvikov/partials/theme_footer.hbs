    <div class="backdrop"></div>

    <footer class="site-footer container">
        <div class="row">
            <div class="col-md-12">
                <div class="footer-content">
                    <div class="row">
                        <div class="col-md-6">
                            <h3>Tags</h3>
                            {{#get "tags" limit="all"}}
                                <ul class="tags">
                                    {{#foreach tags}}
                                        <li>
                                            <a href="{{url}}">{{name}}</a>
                                        </li>
                                    {{/foreach}}
                                </ul>
                            {{/get}}
                        </div>
                        <div class="col-md-6">
                            <h3>Newsletter</h3>
                            {{subscribe_form
                                form_class="gh-signin"
                                input_class="gh-input"
                                button_class="btn"
                                placeholder="Your email address"
                            }}
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-12">
